<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back"
        tools:context=".InformationActivity">

    <androidx.appcompat.widget.Toolbar
            android:background="@color/white"
            android:id="@+id/toolbar_top"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            app:title=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0">


        <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"/>


    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="100sp"
               android:layout_height="100sp"
               app:layout_constraintTop_toBottomOf="@+id/toolbar_top"
               android:layout_marginTop="24dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
               android:id="@+id/friendImage"/>
    <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingStart="10sp"
            android:textSize="20sp"
            android:background="@color/white"
            android:text="Name"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="40dp"/>
    <TextView
            android:gravity="center_vertical"
            android:textColor="@color/ios_blue"
            android:paddingStart="10sp"
            android:textSize="20sp"
            android:background="@color/white"
            android:text="Number"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendNumber"
            app:layout_constraintTop_toBottomOf="@+id/friendName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp"/>
    <TextView
            android:gravity="center_vertical"
            android:textColor="@color/ios_blue"
            android:paddingStart="10sp"
            android:textSize="20sp"
            android:background="@color/white"
            android:text="Записаться"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendPush"
            app:layout_constraintTop_toBottomOf="@+id/friendNumber" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:background="@color/white"
            android:paddingStart="10sp"
            android:textColor="@color/ios_blue"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="Отправить сообщение"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendChat"
            app:layout_constraintTop_toBottomOf="@+id/friendPush" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:background="@color/white"
            android:text="Удалить друга"
            android:paddingStart="10sp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/ios_blue"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendRemove"
            app:layout_constraintTop_toBottomOf="@+id/friendChat" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:background="@color/white"
            android:text="Заблокировать"
            android:textColor="@color/red"
            android:gravity="center_vertical"
            android:paddingStart="10sp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/friendBlock"
            app:layout_constraintTop_toBottomOf="@+id/friendRemove" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textSize="18sp"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/friendImage"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>