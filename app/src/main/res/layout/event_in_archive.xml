<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="140sp">

    <TextView
            android:textSize="15sp"
            android:text="Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/events_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintVertical_bias="0.504"/>
    <TextView
            android:textColor="@color/ios_blue"
            android:text="Отменить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/events_deny"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <TextView
            android:textColor="@color/ios_blue"
            android:text="Принять"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/events_accept"
            app:layout_constraintTop_toBottomOf="@+id/events_deny" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/events_deny"/>
    <TextView
            android:textColor="@color/ios_blue"
            android:text="Изменить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/events_change"
            app:layout_constraintTop_toBottomOf="@+id/events_accept" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/events_accept"/>
</androidx.constraintlayout.widget.ConstraintLayout>