<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100sp">


    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retry_date" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retry_time"
            app:layout_constraintTop_toBottomOf="@+id/retry_date"
            app:layout_constraintStart_toStartOf="@+id/retry_date"
            android:layout_marginTop="4dp" android:textSize="18sp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retry_name"
            app:layout_constraintTop_toBottomOf="@+id/retry_time"
            app:layout_constraintStart_toStartOf="@+id/retry_time"
            android:layout_marginTop="4dp" android:textSize="18sp"/>
    <TextView
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_status" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp" android:layout_marginEnd="56dp"
            android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>