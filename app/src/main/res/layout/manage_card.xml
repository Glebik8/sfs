<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="100sp">

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_date" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_time" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/manage_date"
            app:layout_constraintStart_toStartOf="@+id/manage_date" android:textSize="18sp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_name"
            app:layout_constraintTop_toBottomOf="@+id/manage_time"
            app:layout_constraintStart_toStartOf="@+id/manage_time" android:layout_marginTop="4dp"
            android:textSize="18sp"/>
    <TextView
            android:textSize="15sp"
            android:textColor="@color/red"
            android:text="Отклонить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_deny"
            app:layout_constraintTop_toBottomOf="@+id/manage_accept"
            app:layout_constraintStart_toStartOf="@+id/manage_accept" android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:textSize="15sp"
            android:textColor="@color/green"
            android:text="Принять"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_accept"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>